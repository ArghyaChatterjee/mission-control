<% reddit = request.env['redd.session'] %>
<% post = post_info $reddit_post_id %>
<img src='https://img.shields.io/badge/comments-<%= post['num_comments'] %>-..svg?style=social' alt='comments <%= post['num_comments'] %>'>
<img src='https://img.shields.io/badge/post_score-<%= post['score'] %>-..svg?style=social' alt='post score <%= post['score'] %>'>
<img src='https://img.shields.io/badge/OAuth-u/<%= reddit.me.name %>-..svg?colorB=22cc22' alt='OAuth u/<%= reddit.me.name %>'>	
